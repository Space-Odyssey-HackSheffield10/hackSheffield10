{
  "dashboard": {
    "title": "Space Odyssey - Player Dashboard",
    "tags": ["game", "fastapi", "player-stats"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Space Odyssey Game Dashboard",
        "type": "text",
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "options": {
          "mode": "markdown",
          "content": "# üöÄ Space Odyssey - Mission Control Dashboard\n\nWelcome to your personalized mission analytics. This dashboard tracks your performance navigating the spaceship and compares your stats with other players.\n\n**Mission Objective:** Successfully land the spaceship before time runs out by solving puzzles and communicating with AI crew members."
        }
      },
      {
        "id": 2,
        "title": "Player Name",
        "type": "stat",
        "gridPos": {
          "h": 3,
          "w": 8,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "player_name{player=\"$player\"}",
            "legendFormat": "{{player}}",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "options": {
          "textMode": "name"
        }
      },
      {
        "id": 3,
        "title": "Your Mission Time",
        "type": "gauge",
        "gridPos": {
          "h": 3,
          "w": 8,
          "x": 8,
          "y": 4
        },
        "targets": [
          {
            "expr": "player_time_remaining_seconds{player=\"$player\"}",
            "legendFormat": "Time Remaining",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 120,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 30},
                {"color": "green", "value": 60}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Mission Status",
        "type": "stat",
        "gridPos": {
          "h": 3,
          "w": 8,
          "x": 16,
          "y": 4
        },
        "targets": [
          {
            "expr": "game_completed{player=\"$player\"}",
            "legendFormat": "Status",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"value": 1, "text": "‚úÖ SUCCESS"},
              {"value": 0, "text": "‚ùå TIMEOUT"}
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "Your Time vs Other Players",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 7
        },
        "targets": [
          {
            "expr": "sort_desc(player_time_remaining_seconds)",
            "legendFormat": "{{player}}",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "$player"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "blue"}}
              ]
            }
          ]
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 6,
        "title": "Puzzles Completed - You vs Others",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 7
        },
        "targets": [
          {
            "expr": "sort_desc(puzzle_completions_total)",
            "legendFormat": "{{player}}",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "$player"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            }
          ]
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 7,
        "title": "Your Messages to AI Crew vs Other Players",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 15
        },
        "targets": [
          {
            "expr": "sort_desc(player_message_count)",
            "legendFormat": "{{player}}",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "$player"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}
              ]
            }
          ]
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 8,
        "title": "AI Crew Messages to You vs Other Players",
        "type": "bargauge",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 15
        },
        "targets": [
          {
            "expr": "sort_desc(chat_messages_total{sender=\"agent\"})",
            "legendFormat": "{{player}}",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "$player"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "purple"}}
              ]
            }
          ]
        },
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient"
        }
      },
      {
        "id": 9,
        "title": "Total Chat Messages (All Players)",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 23
        },
        "targets": [
          {
            "expr": "sum(chat_messages_total)",
            "legendFormat": "Total Messages",
            "refId": "A"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Chat Messages Over Time",
        "type": "graph",
        "gridPos": {
          "h": 6,
          "w": 16,
          "x": 8,
          "y": 23
        },
        "targets": [
          {
            "expr": "rate(chat_messages_total{sender=\"user\"}[1m])",
            "legendFormat": "User Messages/min",
            "refId": "A"
          },
          {
            "expr": "rate(chat_messages_total{sender=\"agent\"}[1m])",
            "legendFormat": "Agent Messages/min",
            "refId": "B"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        }
      },
      {
        "id": 11,
        "title": "Mission Success Rate",
        "type": "piechart",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 29
        },
        "targets": [
          {
            "expr": "sum(game_completed{status=\"success\"})",
            "legendFormat": "‚úÖ Successful Landings",
            "refId": "A"
          },
          {
            "expr": "sum(game_completed{status=\"timeout\"})",
            "legendFormat": "‚ùå Mission Timeouts",
            "refId": "B"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value", "percent"]
          }
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "‚úÖ Successful Landings"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "‚ùå Mission Timeouts"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        }
      },
      {
        "id": 12,
        "title": "Games Completed vs Timed Out",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 29
        },
        "targets": [
          {
            "expr": "sum(game_completed{status=\"success\"})",
            "legendFormat": "Successful",
            "refId": "A"
          },
          {
            "expr": "sum(game_completed{status=\"timeout\"})",
            "legendFormat": "Timed Out",
            "refId": "B"
          }
        ],
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Successful"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Timed Out"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            }
          ]
        },
        "options": {
          "orientation": "horizontal",
          "textMode": "value_and_name"
        }
      }
    ],
    "refresh": "5s",
    "schemaVersion": 38,
    "version": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": [
        {
          "name": "player",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "query": "label_values(game_duration_seconds, player)",
          "multi": false,
          "includeAll": false,
          "refresh": 1
        }
      ]
    }
  },
  "overwrite": true
}
